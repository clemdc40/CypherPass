<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.cipher.controllers.AddPasswordController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: #f0f0f0;" prefWidth="600" prefHeight="400">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Website:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="websiteField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Password Length:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Slider fx:id="passwordLengthSlider" min="1" max="32" value="12" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label fx:id="passwordLengthLabel" text="12" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

    <Label text="Generate Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="Generate" onAction="#handleGeneratePassword" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-background-radius: 10;"/>

    <CheckBox fx:id="includeUppercase" text="Include Uppercase" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <CheckBox fx:id="includeNumbers" text="Include Numbers" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <CheckBox fx:id="includeSymbols" text="Include Symbols" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Button text="Add Password" onAction="#handleAddPassword" GridPane.rowIndex="8" GridPane.columnIndex="1" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-background-radius: 10;"/>
</GridPane>
